<!DOCTYPE html>
<html>
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/navbar.ejs') %>

    <div class="container">
      <form action="/api/v1/user/login" method="post" class="container__login">
        <h1>Login</h1>

        <div class="form-group">
          <label for="email"></label>
          <input
            type="email"
            name="email"
            id="email"
            required
            placeholder="Email:"
          />
        </div>

        <div class="form-group">
          <label for="password"></label>
          <input
            type="password"
            name="password"
            id="password"
            required
            placeholder="Password:"
          />
        </div>

        <button type="submit">Login</button>

        <div class="link">
          <p>No Account yet? <a href="/api/v1/user/register">Signup </a></p>
          <p>
            Forgot Password?<a href="/api/v1/user/request/password/reset"
              >Reset
            </a>
          </p>
        </div>
      </form>
    </div>
  </body>
</html>
