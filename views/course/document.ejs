<html>
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/navbar.ejs') %>

    <div class="document-page_container">
      <h1>DOCUMENT DETAIL</h1>

      <div class="heading">
        <h1>Heading : <%= document.heading %></h1>

        <h1>Description: <%= document.description %></h1>
      </div>

      <h3>ID:</h3>
      <h1><%= document._id %></h1>
      <h3>HEADING:</h3>

      <h1><%= document.title %></h1>
      <h3>TYPE:</h3>
      <h1><%= document.type %></h1>

      <a href="/api/v1/course/download/<%= document._id %>">
        <button>
          DOWNLOAD
          <img src="/images/icons/download.png" />
        </button>
      </a>

      <div class="actions">
        <% if (locals.user && (locals.user.role === "admin")) { %>

        <div>
          <a href="/api/v1/course/document/edit/<%= document._id %>">
            <button>
              EDIT
              <img src="/images/icons/edit.png" />
            </button>
          </a>

          <a data-doc="<%= document._id %>">
            <button>
              DELETE
              <img src="/images/icons/delete.png" />
            </button>
          </a>
        </div>

        <% } %>
      </div>

      <% if (document.type === "assignment") { %> <% if (locals.user &&
      (locals.user.role === "admin")) { %> <% if (submissions &&
      submissions.length > 0) { %>
      <h1>SUBMISSION DETAILS:</h1>
      <% submissions.forEach(function(submission) { %>
      <h4>Submitted by: <%= submission.submittedBy[0].name %></h4>
      <h4>Submitted at: <%= submission.created_at %></h4>
      <br />

      <button>DOWNLOAD SUBMISSION</button>

      <br />

      <% }); %> <% } else { %>
      <h1>No submissions made yet</h1>
      <% } %> <% } %>

      <div>
        <button>
          <a
            href="/api/v1/course/submission/document/<%= document._id %>/type/assignment"
          >
            SUBMIT ASSIGNMENT
          </a>
        </button>
      </div>
      <% } %>
    </div>
  </body>
</html>
