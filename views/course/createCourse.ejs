<html>
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/navbar.ejs') %>

    <div class="container">
      <form
        action="/api/v1/course/create"
        method="post"
        class="container__login"
      >
        <h1>Create Course</h1>

        <div class="form-group">
          <input
            type="text"
            name="title"
            id="title"
            required
            placeholder="Course title:"
          />
        </div>

        <div class="form-group">
          <input
            type="text"
            name="code"
            id="code"
            required
            placeholder="Course Code:"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="description"
            id="description"
            required
            placeholder="Course Description:"
          />
        </div>

        <button type="submit">Create Course</button>
      </form>
    </div>
  </body>
</html>
