<!DOCTYPE html>
<html>
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/navbar.ejs') %>

    <div class="container">
      <form
        method="post"
        action="/api/v1/course/edit"
        class="container__editCourse"
      >
        <h1>Edit Course Details</h1>
        <input type="hidden" name="id" value="<%= course._id %>" />
        <div class="form-group">
          <label>Title:</label>
          <input
            type="text"
            name="title"
            id="title"
            required
            placeholder="Course title:"
            value="<%= course.title %>"
          />
        </div>

        <div class="form-group">
          <label>Code:</label>
          <input
            type="text"
            name="code"
            id="code"
            required
            placeholder="Course Code:"
            value="<%= course.code %>"
          />
        </div>
        <div class="form-group">
          <label>Description:</label>
          <input
            type="text"
            name="description"
            id="description"
            required
            placeholder="Course Description:"
            value="<%= course.description %>"
          />
        </div>

        <button type="submit">Submit</button>
      </form>
    </div>
  </body>
</html>
