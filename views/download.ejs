<!DOCTYPE html>
<html lang="en">
  <%- include("./head.ejs") %>
  <body>
    <%- include("./navbar.ejs") %> <% if (locals.error) { %>
    <div style="color: red; margin-bottom: 1rem">Incorrect Password</div>
    <% } %>
    <form
      action="/api/v1/course/document/download/<%= file._id %>"
      method="post"
    >
      <% if(locals.file.password ) { %>
      <h1>ENTER PASSWORD</h1>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required />
      <% } else { %>
      <h1>NO PASSWORD</h1>
      <% } %>

      <button style="grid-column: span 2" type="submit">DOWNLOAD NOW</button>
    </form>
  </body>
</html>
